<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="120dp">
    <RelativeLayout
        android:id="@+id/culture_relat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/panda_culture_item_image"
            android:layout_width="180dp"
            android:layout_height="120dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:padding="5dp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/panda_culture_item_image"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="18dp"
            android:layout_marginStart="18dp"
            android:src="@drawable/default_time_view" />

        <ImageView
            android:id="@+id/play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/imageView2"
            android:layout_alignStart="@+id/imageView2"
            android:layout_alignTop="@+id/imageView2"
            android:layout_marginLeft="5dp"
            android:src="@drawable/play" />

        <TextView
            android:id="@+id/panda_oculture_item_sp_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/panda_culture_item_image"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="6dp"
            android:layout_marginStart="6dp"
            android:layout_toEndOf="@+id/play"
            android:layout_toRightOf="@+id/play"
            android:text="00:00:54"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/panda_culture_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/panda_culture_item_image"
            android:layout_toRightOf="@+id/panda_culture_item_image"
            android:lines="1"
            android:text="21331313"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/panda_culture_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@+id/panda_culture_item_image"
            android:lines="2"
            android:text="1017-04-12"
            android:textColor="#d3d3d3" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#d3d3d3" />
    </RelativeLayout>
</RelativeLayout>