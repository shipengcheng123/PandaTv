<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:weightSum="1">

    <ImageView
        android:id="@+id/live_item_image"
        android:layout_width="match_parent"
        android:layout_height="150dp"/>

    <TextView
        android:id="@+id/live_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="[正在直播]八达岭南四楼"
        />

    <LinearLayout
        android:id="@+id/live_item_LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="简介"
            />

        <ImageButton
            android:id="@+id/live_item_imBtn"
            android:layout_width="335dp"
            android:layout_height="wrap_content"
            android:src="@drawable/live_china_detail_up"
            android:background="#fff"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#dad4d4"
        android:layout_marginTop="5dp"
        ></LinearLayout>




    <TextView
        android:id="@+id/live_item_Jianjie"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_weight="0.19" />
    

</LinearLayout>