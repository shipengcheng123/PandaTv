<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#303F9F">

        <ImageView
            android:id="@+id/Login_Finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/personal_back_img" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:text="忘记密码"
            android:textColor="#ffffff"
            android:textSize="25dp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="只支持手机号注册用户找回密码"
            android:textColor="@color/colorPrimaryDark" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp" />

        <EditText
            android:id="@+id/forget_editUserPhone"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/login_edit_shape"
            android:hint="请输入注册时的手机账号"
            android:padding="4dp"
            android:textColorHint="#ADADAD"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/forget_Phone_Cancle"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:textColor="#FFF4174A" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/forget_checkCodeEdit_"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/login_edit_shape"
                android:hint="请输入图片验证码"
                android:padding="4dp"
                android:textColorHint="#ADADAD"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/forget_TPYanZhengma"
                android:layout_width="110dp"
                android:layout_height="match_parent" />
        </LinearLayout>

        <TextView
            android:id="@+id/Photo_Cancle"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:textColor="#FFF4174A" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/forget_phoneCheckCode_"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/login_edit_shape"
                android:hint="请输入收到的验证码"
                android:padding="4dp"
                android:textColorHint="#ADADAD"
                android:textSize="15sp" />

            <TextView
                android:layout_width="25dp"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/forget_phoneCheckCodeBtn_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:text="获取验证码"
                android:textColor="@color/colorWhite" />
        </LinearLayout>

        <TextView
            android:id="@+id/Yzm_Cancle"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:textColor="#FFF4174A" />

        <EditText
            android:id="@+id/forget_newPasswordEdit_"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/login_edit_shape"
            android:hint="请设置新密码"
            android:padding="4dp"
            android:password="true"
            android:textColorHint="#ADADAD"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/Pwd_Cancle"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:textColor="#FFF4174A" />


        <Button
            android:id="@+id/forget_findPwdBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/login_btn_shape"
            android:text="找回密码"
            android:textColor="@color/colorWhite" />
    </LinearLayout>
</LinearLayout>