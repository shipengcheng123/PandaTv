<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="海外用户暂时不支持手机号注册，您可以使用邮箱注册"
            android:textColor="@color/colorPrimaryDark" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp" />

        <EditText
            android:id="@+id/editUserPhone_"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/login_edit_shape"
            android:hint="账号：请输入手机账号"
            android:padding="4dp"
            android:textColorHint="#ADADAD"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/Phone_Cancle"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:textColor="#FFF4174A" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/checkCodeEdit_"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/login_edit_shape"
                android:hint="请输入图片验证码"
                android:padding="4dp"
                android:textColorHint="#ADADAD"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/checkCodeImage_"
                android:layout_width="110dp"
                android:layout_height="match_parent" />
        </LinearLayout>

        <TextView
            android:id="@+id/Photo_Cancle"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:textColor="#FFF4174A" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/phoneCheckCode_"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/login_edit_shape"
                android:hint="请输入收到的验证码"
                android:padding="4dp"
                android:textColorHint="#ADADAD"
                android:textSize="15sp" />

            <TextView
                android:layout_width="25dp"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/phoneCheckCodeBtn_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:text="获取验证码"
                android:textColor="@color/colorWhite" />
        </LinearLayout>

        <TextView
            android:id="@+id/Yzm_Cancle"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:textColor="#FFF4174A" />

        <EditText
            android:id="@+id/newPasswordEdit_"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/login_edit_shape"
            android:hint="请设置新密码"
            android:padding="4dp"
            android:textColorHint="#ADADAD"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/Pwd_Cancle"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:textColor="#FFF4174A" />

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:button="@null"
            android:checked="true"
            android:drawableLeft="@drawable/gou_check_selector"
            android:text="我已阅读并同意《央视网网络服务使用协议》"
            android:textColor="@color/colorPrimaryDark" />

        <Button
            android:id="@+id/findPwdBtn_"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/login_btn_shape"
            android:text="注册"
            android:textColor="@color/colorWhite" />
    </LinearLayout>
</LinearLayout>