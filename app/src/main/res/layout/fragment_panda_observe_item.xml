<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/panda_observe_relativeLayout"
    android:layout_height="120dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/default_time_view"
        android:layout_alignBottom="@+id/panda_observe_item_image"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:layout_marginBottom="5dp"
        android:id="@+id/imageView2" />
    <ImageView
        android:id="@+id/play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/play"
        android:layout_marginLeft="5dp"
        android:layout_alignTop="@+id/imageView2"
        android:layout_alignLeft="@+id/imageView2"
        android:layout_alignStart="@+id/imageView2" />

    <TextView
        android:layout_marginBottom="5dp"
        android:id="@+id/panda_observe_item_sp_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/panda_observe_item_image"
        android:layout_marginLeft="6dp"
        android:layout_marginStart="6dp"
        android:layout_toEndOf="@+id/play"
        android:layout_toRightOf="@+id/play"
        android:textColor="#ffffff"
        android:text="00:00:54"
        />
<TextView
    android:text="21331313"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/panda_observe_item_title"
    android:textColor="#000000"
    android:layout_alignParentTop="true"
    android:layout_toRightOf="@+id/panda_observe_item_image"
    android:layout_toEndOf="@+id/panda_observe_item_image"
    android:layout_marginTop="8dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#d3d3d3"
        android:text="1017-04-12"
        android:id="@+id/panda_observe_item_time"
        android:layout_alignBottom="@+id/panda_observe_item_image"
        android:layout_toRightOf="@+id/panda_observe_item_image"
        android:layout_toEndOf="@+id/panda_observe_item_image"
         />

<TextView
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:layout_alignParentBottom="true"
    android:background="#d3d3d3"
    android:id="@+id/textView" />

    <ImageView
        android:padding="5dp"
        android:layout_width="180dp"
        android:layout_height="120dp"
        android:id="@+id/panda_observe_item_image"
        android:layout_above="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
