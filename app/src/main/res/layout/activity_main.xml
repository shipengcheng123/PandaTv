<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="jiyun.com.ipandatv.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/FrameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"></FrameLayout>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="5">

        <RadioButton
            android:id="@+id/btn_explore_comprehensive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:drawablePadding="-5dp"
            android:drawableTop="@drawable/homepage_selector"
            android:gravity="center"
            android:text="首页" />

        <RadioButton
            android:id="@+id/btn_explore_move"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="-5dp"
            android:drawableTop="@drawable/pandalive_selector"
            android:gravity="center"
            android:text="熊猫直播" />

        <RadioButton
            android:id="@+id/btn_explore_plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="-5dp"
            android:drawableTop="@drawable/rollvideo_selector"
            android:gravity="center"
            android:text="滚滚视频" />

        <RadioButton
            android:id="@+id/btn_explore_find"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="-5dp"
            android:drawableTop="@drawable/pandareport_selector"
            android:gravity="center"
            android:text="熊猫播报" />

        <RadioButton
            android:id="@+id/btn_explore_my"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="-5dp"
            android:drawableTop="@drawable/livechina_selector"
            android:gravity="center"
            android:text="直播中国" />

    </RadioGroup>
</LinearLayout>
