<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="海外用户暂时不支持手机号注册，您可以使用邮箱注册"
        android:textColor="@color/colorPrimaryDark"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="25dp" />

    <EditText
        android:id="@+id/editUserPhone"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/login_edit_shape"
        android:hint="账号：请输入手机账号"
        android:padding="4dp"
        android:textColorHint="#ADADAD"
        android:textSize="15sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="25dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/checkCodeEdit"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:background="@drawable/login_edit_shape"
            android:hint="请输入图片验证码"
            android:textColorHint="#ADADAD"
            android:textSize="15sp"
            android:padding="4dp"/>
        <ImageView
            android:id="@+id/checkCodeImage"
            android:layout_width="110dp"
            android:layout_height="match_parent" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="25dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/phoneCheckCode"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:background="@drawable/login_edit_shape"
            android:hint="请输入收到的验证码"
            android:textColorHint="#ADADAD"
            android:textSize="15sp"
            android:padding="4dp"/>
        <TextView
            android:layout_width="25dp"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/phoneCheckCodeBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:text="获取验证码"
            android:textColor="@color/colorWhite"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="25dp" />
    <EditText
        android:id="@+id/newPasswordEdit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/login_edit_shape"
        android:hint="请设置新密码"
        android:textColorHint="#ADADAD"
        android:textSize="15sp"
        android:padding="4dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        />
    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="我已阅读并同意《央视网网络服务使用协议》"
        android:textColor="@color/colorPrimaryDark"
        android:button="@null"
        android:layout_marginLeft="20dp"
        android:drawableLeft="@drawable/gou_check_selector"/>
    <Button
        android:id="@+id/findPwdBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/login_btn_shape"
        android:text="注册"
        android:textColor="@color/colorWhite"
        />
</LinearLayout>