<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="邮箱注册需要激活后才能登陆"
        android:textColor="@color/colorPrimaryDark" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="25dp" />

    <EditText
        android:id="@+id/editUserPhone_yx"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/login_edit_shape"
        android:hint="账号：请输入邮箱"
        android:padding="4dp"
        android:textColorHint="#ADADAD"
        android:textSize="15sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="25dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/checkCodeEdit_yx"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/login_edit_shape"
            android:hint="请输入图片验证码"
            android:padding="4dp"
            android:textColorHint="#ADADAD"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/checkCodeImage_yx"
            android:layout_width="110dp"
            android:layout_height="match_parent" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="25dp" />

    <EditText
        android:id="@+id/newPasswordEdit_yx"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/login_edit_shape"
        android:hint="请输入新密码"
        android:padding="4dp"
        android:textColorHint="#ADADAD"
        android:textSize="15sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <EditText
        android:id="@+id/newCheckPasswordEdit_yx"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/login_edit_shape"
        android:hint="请确认新密码"
        android:padding="4dp"
        android:textColorHint="#ADADAD"
        android:textSize="15sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp" />

    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:button="@null"
        android:checked="true"
        android:drawableLeft="@drawable/gou_check_selector"
        android:text="我已阅读并同意《央视网网络服务使用协议》"
        android:textColor="@color/colorPrimaryDark" />

    <Button
        android:id="@+id/findPwdBtn_yx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/login_btn_shape"
        android:text="注册"
        android:textColor="@color/colorWhite" />
</LinearLayout>