<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140px"
        android:background="@color/colorPrimaryDark"
        android:orientation="horizontal">
        <TextView
            android:layout_width="324dp"
            android:layout_height="140px"
            android:text="熊猫观察"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:gravity="center"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/person_sign"
            android:layout_weight="0.13"
            android:layout_marginTop="8dp"
            android:id="@+id/Personal_Cente"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="3dp"/>
    </LinearLayout>

    <com.androidkun.PullToRefreshRecyclerView
        android:id="@+id/bobao_RecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></com.androidkun.PullToRefreshRecyclerView>


</LinearLayout>